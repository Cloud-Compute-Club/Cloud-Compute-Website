---
import { featuredResources } from '../../data/resources';
---

<div class="relative h-[300px] md:h-[400px] w-full overflow-hidden rounded-3xl group carousel-container">
    {featuredResources.map((resource, index) => (
        <div
            class={`carousel-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'}`}
            data-index={index}
        >
            {/* Background Image with Gradient Overlay */}
            <div
                class="absolute inset-0 bg-cover bg-center transition-transform duration-[30s] ease-linear scale-100 hover:scale-110"
                style={`background-image: url('${resource.image}')`}
            >
                <div class="absolute inset-0 bg-gradient-to-t from-background-dark via-background-dark/40 to-transparent" />
                <div class="absolute inset-0 bg-gradient-to-r from-background-dark/80 to-transparent" />
            </div>

            {/* Content */}
            <div class="absolute inset-0 flex flex-col justify-end p-8 md:p-12 mb-4">
                <div class="slide-content transform transition-all duration-700 translate-y-4 opacity-0">
                    <span class="inline-block px-3 py-1 rounded-full bg-primary/20 border border-primary/30 text-primary text-xs font-bold mb-4 backdrop-blur-md">
                        Featured: {resource.provider}
                    </span>
                    <h2 class="text-3xl md:text-5xl font-extrabold text-white mb-4 tracking-tight">
                        {resource.title}
                    </h2>
                    <p class="max-w-xl text-text-secondary text-lg mb-6 line-clamp-2">
                        {resource.description}
                    </p>
                    <a
                        href={resource.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn-primary inline-flex items-center gap-2"
                    >
                        Go to Resource
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    ))}

    {/* Progress Indicators */}
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2 z-20">
        {featuredResources.map((_, i) => (
            <button
                data-target={i}
                class={`carousel-indicator h-1.5 rounded-full transition-all duration-300 ${i === 0 ? 'w-8 bg-primary' : 'w-2 bg-white/20 hover:bg-white/40'}`}
                aria-label={`Go to slide ${i + 1}`}
            />
        ))}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const containers = document.querySelectorAll('.carousel-container');
        
        containers.forEach(container => {
            const slides = container.querySelectorAll('.carousel-slide');
            const contents = container.querySelectorAll('.slide-content');
            const indicators = container.querySelectorAll('.carousel-indicator');
            let currentIndex = 0;
            let timer;

            // Initial state activation for the first slide
            if(contents.length > 0) {
                contents[0].classList.remove('translate-y-4', 'opacity-0');
                contents[0].classList.add('translate-y-0', 'opacity-100');
            }

            const showSlide = (index) => {
                // Deactivate current
                slides[currentIndex].classList.remove('opacity-100', 'z-10');
                slides[currentIndex].classList.add('opacity-0', 'z-0');
                contents[currentIndex].classList.remove('translate-y-0', 'opacity-100');
                contents[currentIndex].classList.add('translate-y-4', 'opacity-0');
                indicators[currentIndex].classList.remove('w-8', 'bg-primary');
                indicators[currentIndex].classList.add('w-2', 'bg-white/20');
                
                // Activate new
                currentIndex = index;
                slides[currentIndex].classList.remove('opacity-0', 'z-0');
                slides[currentIndex].classList.add('opacity-100', 'z-10');
                
                // Slight delay for content animation to sync visually
                setTimeout(() => {
                    contents[currentIndex].classList.remove('translate-y-4', 'opacity-0');
                    contents[currentIndex].classList.add('translate-y-0', 'opacity-100');
                }, 50);

                indicators[currentIndex].classList.remove('w-2', 'bg-white/20', 'hover:bg-white/40');
                indicators[currentIndex].classList.add('w-8', 'bg-primary');
            };

            const nextSlide = () => {
                showSlide((currentIndex + 1) % slides.length);
            };

            const startTimer = () => {
                timer = setInterval(nextSlide, 5000);
            };

            const stopTimer = () => {
                clearInterval(timer);
            };

            indicators.forEach((indicator, index) => {
                indicator.addEventListener('click', () => {
                    stopTimer();
                    showSlide(index);
                    startTimer();
                });
            });

            container.addEventListener('mouseenter', stopTimer);
            container.addEventListener('mouseleave', startTimer);

            startTimer();
        });
    });
</script>
