---
import Layout from '../layouts/Layout.astro';
import ResourceCarousel from '../components/resources/ResourceCarousel';
import ProviderGrid from '../components/resources/ProviderGrid';
---

<Layout title="Cloud Resources | Cloud Compute Club">
  <main class="pt-24 pb-20 px-6 md:px-12 max-w-7xl mx-auto">
    {/* Page Header */}
    <div class="mb-16">
      <h1 class="text-2xl md:text-6xl font-black text-white mb-4">
        Cloud <span class="text-gradient underline decoration-primary/30 decoration-8 underline-offset-8">Resources</span>
      </h1>
      <p class="text-xl text-text-secondary max-w-2xl">
        A curated collection of documentation, learning materials, and community guides to help you master the cloud.
      </p>
    </div>

    {/* Featured Carousel */}
    <div class="mb-20">
      <ResourceCarousel client:visible />
    </div>

    {/* Providers Section */}
    <section>
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-2xl font-bold text-white mb-2">Cloud Providers</h2>
          <p class="text-text-secondary text-sm">Deep dives and resources for specific platforms</p>
        </div>
        <div class="h-px bg-white/10 flex-grow mx-8" />
      </div>

      <ProviderGrid client:load />
    </section>

    {/* Community Section CTA */}
    <section class="mt-20 glass-card p-12 text-center relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-primary to-transparent opacity-50" />
      <h2 class="text-3xl font-extrabold text-white mb-4">Want to contribute?</h2>
      <p class="text-text-secondary mb-8 max-w-lg mx-auto">
        Found a great resource that isn't listed here? Join our Discord and share it with the community!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://discord.gg/55CpvZbX8K" class="btn-primary">Join Discord</a>
        <a href="/about" class="btn-outline">Learn More</a>
      </div>
    </section>
  </main>
</Layout>
